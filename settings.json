// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "icon_theme": "Material Icon Theme",
  "features": {
    "edit_prediction_provider": "zed"
  },
  // https://github.com/zed-industries/zed/pull/7338
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "scrollbar": {
    "show": "never"
  },
  "vertical_scroll_margin": 0,
  "agent": {
    "default_profile": "ask",
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-latest"
    },
    "version": "2"
  },
  "project_panel": {
    // Where to dock project panel. Can be 'left' or 'right'.
    "dock": "right"
  },
  "terminal": {
    "dock": "bottom"
  },
  "ui_font_size": 14,
  "buffer_font_size": 12.0,
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Quddus Night"
  },
  "diagnostics": {
    "include_warnings": true,
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": null
    }
  },
  // "inlay_hints": {
  //   // Global switch to toggle hints on and off, switched off by default.
  //   "enabled": true,
  //   // Toggle certain types of hints on and off, all switched on by default.
  //   "show_type_hints": true,
  //   "show_parameter_hints": true,
  //   // Corresponds to null/None LSP hint type value.
  //   "show_other_hints": true
  // },
  "tab_size": 2,
  "use_tab_character": false,
  "vim_mode": true,
  // "buffer_font_family": "FiraCode Nerd Font",
  "buffer_font_family": "MesloLGS Nerd Font",

  "base_keymap": "VSCode",
  "relative_line_numbers": true,
  "cursor_shape": "bar",
  "cursor_blink": false,
  "vim": {
    "highlight_on_yank_duration": 200
  },
  "experimental.theme_overrides": {
    "players": [
      {
        "cursor": "#ffffff"
      }
    ],
    // Disables weird highlight
    "editor.document_highlight.read_background": "#00000000",
    "editor.document_highlight.write_background": "#00000000"
  },
  "languages": {
    "TypeScript": {
      "language_servers": [
        "vtsls",
        "!typescript-language-server",
        "eslint",
        "!biome",
        "..."
      ],
      "prettier": {
        "allowed": false
      },
      "formatter": {
        "external": {
          "command": "prettierd",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "TSX": {
      "language_servers": [
        "vtsls",
        "!typescript-language-server",
        "eslint",
        "!biome",
        "..."
      ],
      "prettier": {
        "allowed": false
      },
      "formatter": {
        "external": {
          "command": "prettierd",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    }
  },
  "unnecessary_code_fade": 0.6
}
